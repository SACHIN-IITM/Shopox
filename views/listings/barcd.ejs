<% layout("/layouts/boilerplate") -%>


<style>
    img{
        height: 100px;
        width: 500px;
        margin-left: 4rem;
    }

    .image{
        height: 300px;
        border: 2px black solid;
        box-shadow: 2px 2px 2px black;
    }
    
    h1{
        text-align: center;
    }
    .data{
        display: flex;
        width: 100%;
        height: 400px;
    }
    .box{
        padding: 2rem;
    }
    .info{
        width: 70%;
    }
    .row-data{
        display: flex;
        width: auto;
    }
    .row-data div{
        margin-right: 4rem;
    }
    .barcode{
        display: flex;
        justify-content: space-evenly;
    }
    button{
        height: 50px;
        width: 200px;
        border-radius: 20px;
        background-color: rgb(108, 62, 62);
        color: whitesmoke;
        align-self: center;
    }
</style>

<h1>Successfully Product Added </h1>
<div class="data">
    <div class="image1 box">
        <img class="image" src="https://images.unsplash.com/photo-1573376670774-4427757f7963?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Ym94fGVufDB8fDB8fHww"  alt="<%= listing.productName %>">
    </div>
    <div class="info box">
        <h2><%= listing.productName %></h2>
        <br>
        <h3><%= listing.productDescription %></h3>
        <br>
        <div class="row-data">
            <div><h3><b>Manufacturer:</b><%= listing.manufacturerName %></h3></div>
            <div><h3><b>Product ID:</b><%= listing.productId %></h3></div>
        </div>
        <br>
        <div class="row-data">
            <div><h3><b>Price(per peice):</b>Rs. <%= listing.price %></h3></div>
            <div><h3><b>Quantity:</b><%= listing.productQuantity %> pieces</h3></div>
        </div>
    </div>
</div>
<% if (listing && listing.barcode) { %>
    <div class="barcode">
        <img src="data:image/png;base64,<%= listing.barcode %>" alt="Barcode">
        <button>Print Barcode</button>
        <button onclick="redirectToNewPage()">Save to Device</button>
    </div>
  <% } else { %>
    <p>No barcode available for this listing.</p>
  <% } %>

  <script>
    function redirectToNewPage() {
      window.location.href = '/listings'; 
    }
  </script>