<% layout("/layouts/boilerplate") -%>

<style>
    button {
        height: 40px;
        width: 200px;
        border-radius: 20px;
        background-color: rgb(108, 62, 62);
        color: whitesmoke;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s, color 0.3s; 
    }

    button:hover {
        background-color: #913939; 
        color: #fff; 
    }

    .detail-num {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .card-img-top h1 {
        font-size: 48px;
        text-align: center;
        margin: 0;
        color: #913939; 
    }

    .card-body p {
        text-align: center;
    }

    .section {
        margin-top: 2rem;
    }

    .list {
        margin: 0 2rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        margin-bottom: 2rem;
        background-color: #f8f8f8; 
        transition: box-shadow 0.3s; 
    }

    .list:hover {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2); 
    }

    .sec-list {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        border-bottom: 1px solid #ccc;
    }

    .sec h3 {
        margin: 0;
        color: #913939; 
    }

    a {
        text-decoration: none; 
    }

    a:hover {
        text-decoration: underline; 
    }
</style>


    
